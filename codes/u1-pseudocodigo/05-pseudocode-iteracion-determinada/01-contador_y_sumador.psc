Algoritmo contar_y_sumar
	
	Definir a, b, c Como Entero
	Definir cont, sum Como Entero
	
	cont <- 0
	sum <- 0
	
	Escribir "Ingrese un primer entero: "
	Leer a
	cont <- cont + 1
	sum <- sum + a
	
	Escribir "Ingrese un segundo entero: "
	Leer b
	cont <- cont + 1
	sum <- sum + b
	
	Escribir "Ingrese un tercer entero: "
	Leer c
	cont <- cont + 1
	sum <- sum + c
	
	Escribir "Cantidad de valores: ", cont
	Escribir "Suma de valores: ", sum
	
FinAlgoritmo
